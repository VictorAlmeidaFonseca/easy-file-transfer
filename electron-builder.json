{
    "appId": "com.filetransfer.app",
    "productName": "FileTransferApp",
    "directories": {
        "output": "release",
        "buildResources": "assets"
    },
    "files": [
        "electron/**/*",
        "public/**/*",
        "uploads_tmp/**/*",
        "package.json"
    ],
    "extraResources": [
        {
            "from": "uploads_tmp",
            "to": "uploads_tmp"
        }
    ],
    "mac": {
        "target": "dmg",
        "icon": "assets/icon.icns"
    },
    "win": {
        "target": "nsis",
        "icon": "assets/icon.ico"
    },
    "linux": {
        "target": "AppImage",
        "icon": "assets"
    }
}